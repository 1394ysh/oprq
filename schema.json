{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "oprq Configuration",
  "description": "Configuration schema for oprq (OpenAPI React Query Codegen)",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "outputPath": {
      "type": "string",
      "description": "Output directory path for generated API files",
      "default": "./src/api"
    },
    "reactQueryVersion": {
      "type": "string",
      "enum": ["v3", "v4", "v5"],
      "description": "React Query / TanStack Query version",
      "default": "v5"
    },
    "httpClient": {
      "type": "string",
      "enum": ["axios"],
      "description": "HTTP client to use (currently only axios is supported)",
      "default": "axios"
    },
    "keepSpecPrefix": {
      "type": "boolean",
      "description": "Keep spec prefix in API URLs. When true, URLs are like 'PETSTORE:/pet/{petId}' (use interceptor to route baseURL). When false, URLs are like '/pet/{petId}' (use single baseURL with axios.create).",
      "default": true
    },
    "specs": {
      "type": "object",
      "description": "Registered OpenAPI specifications",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string",
            "format": "uri",
            "description": "URL to the OpenAPI specification"
          },
          "description": {
            "type": "string",
            "description": "Description of the API"
          }
        },
        "required": ["url"]
      }
    },
    "generate": {
      "type": "object",
      "description": "Code generation options",
      "properties": {
        "queryHook": {
          "type": "boolean",
          "description": "Generate useQuery hooks",
          "default": true
        },
        "mutationHook": {
          "type": "boolean",
          "description": "Generate useMutation hooks",
          "default": true
        },
        "suspenseHook": {
          "type": "boolean",
          "description": "Generate useSuspenseQuery hooks (React Query v5 only)",
          "default": false
        },
        "infiniteQueryHook": {
          "type": "boolean",
          "description": "Generate useInfiniteQuery hooks for pagination",
          "default": false
        }
      }
    }
  },
  "required": ["outputPath", "reactQueryVersion"]
}
